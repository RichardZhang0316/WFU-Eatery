@import "../Subway/Subway.wxss";

.likeandcollect{
    margin: 20rpx;
  }
  .img{
    width: 60rpx;
    height: 60rpx;
    margin-right: 20rpx;
  }
  .title{
    margin: 20rpx;
  }
  .left{
    text-align: left;
    margin-left: 20rpx;
  }
  .right{
    text-align: right;
    color: gray;
    margin: 20rpx;
  }
  .remarksList{
    margin-top: 200rpx;
  }
  .remarks{
    text-align: left;
    /* margin: 20rpx;  */
    border-bottom: 2rpx solid #e9e2e2;
    padding: 20rpx;
    background-color: white;
  }
  .name{
    color: gray;
    margin-bottom: 20rpx;
    font-size: 15px;
  }
  .content{
    /*在textarea中设置输入内容的自动换行*/
    word-wrap:break-word;
    font-size: 15px;
  }
  textarea{
    width: auto;
    height: 200rpx;
    border: 1rpx solid #c3c3c3;
    background-color: white;
    word-break:break-all;
    margin: 10px;
    margin-bottom: 20px;
    padding: 10px;
  }

  .buttttton{
     background-color: rgb(214, 177, 96)!important;
     font-size: medium !important;
     margin-bottom:30px;
  }

  .last{
