<!--pages/IncomingMenu/IncomingMenu.wxml-->
<view class="root">
   <view class="maxTitle">Upcoming Menus</view>
</view>

<view class='topTabSwiper'>
   <view class='tab  {{currentData == 0 ? "tabBorer" : "abc"}}' data-current="0" bindtap='checkCurrent'><text class="l1" data-current="0">{{time1}}</text><text class="l2" data-current="0">{{time2}}</text></view>
   <view class='tab  {{currentData == 1 ? "tabBorer" : ""}}' data-current="1" bindtap='checkCurrent'><text class="l1" data-current="1">{{day11}}</text><text class="l2" data-current="1">{{day12}}</text></view>
   <view class='tab  {{currentData == 2 ? "tabBorer" : ""}}' data-current="2" bindtap='checkCurrent'><text class="l1" data-current="2">{{day21}}</text><text class="l2" data-current="2">{{day22}}</text></view>
   <view class='tab  {{currentData == 3 ? "tabBorer" : ""}}' data-current="3" bindtap='checkCurrent'><text class="l1" data-current="3">{{day31}}</text><text class="l2" data-current="3">{{day32}}</text></view>
