   <view class='tab  {{currentData == 6 ? "tabBorer" : ""}}' data-current="6" bindtap='checkCurrent'><text class="l1" data-current="6">{{day61}}</text><text class="l2" data-current="6">{{day62}}</text></view>
</view>

<view class='topTabSwiper'>
   <view class='tab1  {{dataCurrent2==0? "tabBorer" : "abc"}}' data-current="0" bindtap='currentCheck2'><text class="l3" data-current="0">Breakfast</text></view>
   <view class='tab1  {{dataCurrent2==1 ? "tabBorer" : "abc" }}' data-current="1" bindtap='currentCheck2'><text class="l3" data-current="1">Lunch</text></view>
   <view class='tab1  {{dataCurrent2==2 ? "tabBorer" : "abc" }}' data-current="2" bindtap='currentCheck2'><text class="l3" data-current="2">Dinner</text></view>
