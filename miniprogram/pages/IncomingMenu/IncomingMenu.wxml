<view class='topTabSwiper'>
   <view class='tab1  {{dataCurrent==0? "tabBorer" : "abc"}}'  data-current = "0" bindtap='currentCheck'><text class="l3">Breakfast</text></view>
   <view class='tab1  {{dataCurrent==1 ? "tabBorer" : "abc" }}'  data-current = "1" bindtap='currentCheck'><text class="l3">Lunch</text></view>
   <view class='tab1  {{dataCurrent==2 ? "tabBorer" : "abc"}}'  data-current = "2" bindtap='currentCheck'><text class="l3">Dinner</text></view>
  

</view>

