   <ec-canvas id="mychart-dom-gauge" canvas-id="mychart-gauge" ec="{{ ec1 }}"></ec-canvas>
</cover-view>
<view class="greyPart"> </view>

<van-sticky id="stickyTab">
   <!-- 供餐时间 Tab -->
   <view class="topTab">
      <van-tabs active="{{currentTimePeriodIndex}}" title-active-color="#d6b160" color="#d6b160" bind:change="onTabChange">
         <van-tab wx:for="{{['Breakfast','Lunch','Dinner']}}" wx:for-item="periodName" wx:key="*this" title="{{periodName}}" bindtap='selectPeriod'></van-tab>
      </van-tabs>
   </view>
</van-sticky>
<!-- 菜单↓ -->
<view class="swiper-container" id="swiper-container">
   <swiper current="{{currentTimePeriodIndex}}" class='swiper' style="height:500px;" duration="300" bindchange="onSwiperChange">
      <!-- 供餐时段 swiper 循环 -->
      <swiper-item class="swiper-item" wx:for="{{['Breakfast','Lunch','Dinner']}}" wx:for-item="periodName" wx:key="*this">
         <scroll-view class="swiper-item-scroll" enable-flex scroll-y scroll-with-animation style="height:500px;">
            <van-empty class="empty-sign" description="没吃的" />
            <view class="dinningHallName-list">
               <!-- 餐厅循环 -->
               <view class="dinningHallName-item" wx:for="{{menu_data[periodName]}}" wx:for-index="dinningHallName" wx:for-item="dinningHallMenu" wx:key="*this">

                  <view class="weui-cells {{dinningHallMenu['open']?'weui-cells_show':''}}">
                     <view class="navigator-box {{dinningHallMenu['open']?'navigator-box-show':''}}">
                        <!-- 餐厅窗口循环 -->
                        <view wx:for="{{dinningHallMenu['window']}}" wx:for-index="window_name" wx:for-item="window_data" wx:key="*this">
                           <!-- 窗口菜单循环 -->
                           <view class="weui-cell dinningHallName" data-periodname="{{periodName}}" data-dinninghallname="{{dinningHallName}}" data-window_name="{{window_name}}" bindtap="windowToggle">{{window_name}}</view>
                           <view class="kind-list__item-bd {{window_data['open']?'kind-list__item-bd_show':''}}">
                              <block wx:for="{{window_data.food_list}}" wx:for-item="food_name" wx:key="index">
                                 <navigator class="weui-cell weui-cell_access navigator" hover-class="weui-cell_active" url="../{{dinningHallName}}/{{dinningHallName}}">
                                    <view class="weui-cell__bd">{{food_name}}</view>
                                    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                                 </navigator>
                              </block>
                           </view>
                        </view>
                     </view>
                  </view>


               </view>
            </view>
            <!-- </view>. -->
         </scroll-view>
      </swiper-item>
   </swiper>
</view>

<view style="height: 60px; width: 100%; background-color:#ececec;"></view>