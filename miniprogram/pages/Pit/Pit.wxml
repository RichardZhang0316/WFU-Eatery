   <view>Estimated Occupancy</view>
</view>
<cover-view class="container">
   <ec-canvas id="mychart-dom-bar" canvas-id="mychart-bar" ec="{{ ec }}"></ec-canvas>
</cover-view>

<view class="shit2">
   <view>Real-time Occupancy </view>
</view>
